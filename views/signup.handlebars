    <div class="inputContainer">
      <input type="email" class="input" id="email-input" placeholder="a" />
      <label for="email-input" class="label">Email</label>
    </div>

    <div class="inputContainer">
      <input type="text" class="input" id="username-input" placeholder="a" />
      <label for="username-input" class="label">Username</label>
    </div>

    <div class="inputContainer">
      <input type="text" class="input" id="password-input" placeholder="a" />
      <label for="password-input" class="label">Password</label>
    </div>

    <div class="inputContainer">
      <input type="text" class="input" id="password-input" placeholder="a" />
      <label for="password-input" class="label">Confirm Password</label>
    </div>

